<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestDrive.Views.DetalheView"
             Title="{Binding Veiculo.Nome}">

    <StackLayout Padding="25">
        <TableView Intent="Settings">
            <TableRoot>
                <TableSection Title="Acessórios">
                    <SwitchCell Text="Freio ABS - R$800" On="True"></SwitchCell>
                    <SwitchCell Text="Ar-Condicionado - R$3000" On="True"></SwitchCell>
                    <SwitchCell Text="MP3 Player - R$500" On="True"></SwitchCell>
                    <TextCell Text="Total: R$50000"></TextCell>
                    
                </TableSection>
            </TableRoot>
        </TableView>
        <Button x:Name="ButtonProximo" Text="Próximo" Clicked="ButtonProximo_Clicked" VerticalOptions="End"></Button> 
    </StackLayout>
    
</ContentPage>